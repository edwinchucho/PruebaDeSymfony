{% extends 'base.html.twig' %}
{% block title %}category{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-12">

            <a class="btn btn-primary" href="{{ path('category_new') }}">NEW</a>

            <table class="table table-striped ">
                <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>active</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            {{ category.id }}
                        </td>
                        <td>
                            {{ category.name }}
                        </td>
                        <td>
                            {{ category.active }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No category found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

